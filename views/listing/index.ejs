<% layout("layout/biolerplate") %>

<body>
   <style>
    #filters{
      display: flex;
      flex-wrap: wrap;
      align-items: center;
    }
    .filter{
      text-align: center;
      margin-right: 2rem;
      margin-top: 2rem;
      opacity: 0.7;
    }
    .filter:hover{
      opacity: 1;
      cursor: pointer;
    }
    .filter p{
      font-size: 1rem;
    }
   </style>

    <div id="filters">
        <!-- your filter icons (no issue here) -->
    </div>

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">

      <% if (alllisting.length === 0) { %>
        <div class="text-center mt-4">
          <h3>No results found for "<%= q %>"</h3>
        </div>
      <% } else { %>

        <% for(let listings of alllisting) { %>
          <a href="/listing/<%= listings._id %>" class="listing-link">

            <div class="card col listing-card">

              <!-- FIXED IMAGE -->
              <img 
                src="<%= listings.images && listings.images.length > 0 ? listings.images[0].url : '/images/default.jpg' %>" 
                class="card-img-top" 
                style="height: 20rem" 
                alt="listing_image"
              >

              <div class="card-body">
                <p class="card-text">
                  <b><%= listings.title %></b><br>
                  â‚¹ <%= listings.price %>/night
                </p>
              </div>

            </div>
          </a>
        <% } %>

      <% } %>

    </div>
</body>
